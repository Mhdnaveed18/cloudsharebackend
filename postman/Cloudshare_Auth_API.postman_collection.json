{
  "info": {
    "name": "CloudShare Auth API",
    "_postman_id": "3fd2f3f4-98f4-4e2f-8aa8-1f2f6d7a1b1a",
    "description": "Auth flows: register, login, forgot password, reset password. Sets {{token}} from responses.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}"
            },
            "description": "Creates a new user and returns an access token."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Created\", function () {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "",
                  "try {",
                  "  const data = pm.response.json();",
                  "  if (data && data.accessToken) {",
                  "    pm.collectionVariables.set(\"token\", data.accessToken);",
                  "    pm.environment.set(\"token\", data.accessToken);",
                  "  }",
                  "} catch (e) {",
                  "  // ignore parse errors",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "description": "Authenticates a user and returns an access token."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"OK\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "try {",
                  "  const data = pm.response.json();",
                  "  if (data && data.accessToken) {",
                  "    pm.collectionVariables.set(\"token\", data.accessToken);",
                  "    pm.environment.set(\"token\", data.accessToken);",
                  "  }",
                  "} catch (e) {",
                  "  // ignore parse errors",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/forgot-password",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "forgot-password"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\"\n}"
            },
            "description": "Generates a reset token. In dev, token is returned in response."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"OK\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "try {",
                  "  const data = pm.response.json();",
                  "  if (data && data.resetToken) {",
                  "    pm.collectionVariables.set(\"resetToken\", data.resetToken);",
                  "    pm.environment.set(\"resetToken\", data.resetToken);",
                  "  }",
                  "} catch (e) {",
                  "  // ignore parse errors",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/reset-password",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "reset-password"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{resetToken}}\",\n  \"newPassword\": \"{{newPassword}}\"\n}"
            },
            "description": "Resets the user's password using a valid reset token."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"No Content\", function () {",
                  "  pm.response.to.have.status(204);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "email",
      "value": "user@example.com",
      "type": "string"
    },
    {
      "key": "password",
      "value": "P@ssw0rd!",
      "type": "string"
    },
    {
      "key": "newPassword",
      "value": "NewP@ssw0rd!",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "resetToken",
      "value": "",
      "type": "string"
    }
  ]
}
